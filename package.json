{
  "name": "@adonisjs/mail",
  "description": "Mail provider for adonis framework and has support for all common mailing services to send emails",
  "version": "9.0.0-1",
  "engines": {
    "node": ">=18.16.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build/src",
    "build/services",
    "build/providers",
    "build/commands",
    "build/factories",
    "build/stubs",
    "build/configure.js",
    "build/configure.d.ts",
    "build/index.d.ts",
    "build/index.js"
  ],
  "exports": {
    ".": "./build/index.js",
    "./commands": "./build/commands/main.js",
    "./commands/*": "./build/commands/*.js",
    "./providers/mail_provider": "./build/providers/mail_provider.js",
    "./services/main": "./build/services/main.js",
    "./factories": "./build/factories/main.js",
    "./types": "./build/src/types/main.js"
  },
  "scripts": {
    "test": "c8 npm run quick:test",
    "lint": "eslint .",
    "clean": "del-cli build",
    "compile": "npm run lint && npm run clean && tsc && npm run copy:templates && npm run index:commands",
    "copy:templates": "copyfiles \"stubs/**/**/*.stub\" build",
    "build": "npm run compile",
    "release": "np --message=\"chore(release): %s\"",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels .github/labels.json adonisjs/mail",
    "quick:test": "node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "index:commands": "adonis-kit index build/commands"
  },
  "devDependencies": {
    "@adonisjs/core": "^6.1.5-7",
    "@adonisjs/eslint-config": "^1.1.8",
    "@adonisjs/prettier-config": "^1.1.8",
    "@adonisjs/tsconfig": "^1.1.8",
    "@adonisjs/view": "^7.0.0-4",
    "@aws-sdk/client-ses": "^3.370.0",
    "@japa/assert": "^2.0.0-1",
    "@japa/expect-type": "^2.0.0-0",
    "@japa/file-system": "^2.0.0-1",
    "@japa/runner": "^3.0.0-6",
    "@japa/spec-reporter": "^1.3.3",
    "@poppinss/cliui": "^6.1.1-3",
    "@poppinss/dev-utils": "^2.0.3",
    "@swc/core": "^1.3.68",
    "@types/node": "^20.4.1",
    "@types/nodemailer": "^6.4.8",
    "c8": "^8.0.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.44.0",
    "github-label-sync": "^2.3.1",
    "husky": "^8.0.3",
    "luxon": "^3.3.0",
    "np": "^8.0.4",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@poppinss/colors": "^4.1.0-3",
    "@poppinss/utils": "^6.5.0-3",
    "fastq": "^1.15.0",
    "formdata-node": "^5.0.1",
    "get-stream": "^7.0.1",
    "got": "^13.0.0",
    "ical-generator": "^5.0.0",
    "nodemailer": "^6.9.3"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.1.5-7",
    "@adonisjs/view": "^7.0.0-4",
    "@aws-sdk/client-ses": "^3.341.0"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-ses": {
      "optional": true
    }
  },
  "author": "virk,adonisjs",
  "license": "MIT",
  "homepage": "https://github.com/adonisjs/mail#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/mail.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/mail/issues"
  },
  "keywords": [
    "adonis",
    "mailer",
    "node-mailer"
  ],
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "next",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
